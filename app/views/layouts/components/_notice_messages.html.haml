- if !@variables.nil? && !@variables['warning_message'].blank?
  %div{:class => 'alert alert-warning', :role => 'alert'}
    %span{:class => 'fa fa-exclamation-triangle', 'aria-hidden' => 'true'}
    = @variables['warning_message']
- if !@variables.nil? && !@variables['notice_message'].blank?
  %div{:class => 'alert alert-success', :role => 'alert'}
    %span{:class => 'fa fa-check-circle', 'aria-hidden' => 'true'}
    = @variables['notice_message']

- if !@variables.nil? && !@variables['alert_message'].blank?
  %div{:class => 'alert alert-danger', :role => 'alert'}
    %span{:class => 'fa fa-exclamation-circle', 'aria-hidden' => 'true'}
    = @variables['alert_message']

- if !@variables.nil? && !@variables['error_messages'].blank? && @variables['error_messages'].any?
  %div{:class => 'alert alert-danger', :role => 'alert'}
    %span{:class => 'fa fa-exclamation-circle', 'aria-hidden' => 'true'}
    - unless @variables['error_messages_title'].blank?
      %strong
        = @variables['error_messages_title']
    %ul
      - @variables['error_messages'].each do |msg|
        %li
          = msg
