<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="row">
      <div class="col-xs-offset-4 col-md-offset-3">
        <h4>Login to site.com</h4>
      </div>
    </div>

    <div class="row">
      <div class="col-md-offset-1 col-md-5">
        <div class="well">
          <form id="loginForm" method="POST" action="/login/" novalidate="novalidate">
            <div class="form-group">
              <%= f.label :email, :class => 'control-label' %><br/>
              <%= f.email_field :email, {:autofocus => true, :class => 'form-control', :title => 'Please enter you username', :placeholder => 'example@gmail.com'} %>
              <span class="help-block"></span>
            </div>
            <div class="form-group">
              <%= f.label :password, :class => 'control-label' %><br/>
              <%= f.password_field :password, {:class => 'form-control', :title => 'Please enter your password', autocomplete: 'off'} %>
              <span class="help-block"></span>
            </div>
            <div id="loginErrorMsg" class="alert alert-error hide">Wrong username og password</div>

            <% if devise_mapping.rememberable? %>
                <div class="checkbox">
                  <label>
                    <%= f.check_box :remember_me %> Remember login
                  </label>

                  <p class="help-block">(if this is a private computer)</p>
                </div>
            <% end %>
            <%= f.submit 'Login', :class => 'btn btn-success btn-block' %>
            <%= link_to 'Forgot your password?', new_password_path(resource_name), :class => 'btn btn-default btn-block' %>
          </form>
        </div>
      </div>
      <div class="col-md-5">
        <p class="lead">
          <u>
            Register now for <span class="text-success">FREE</span>
          </u>
        </p>
        <ul class="list-unstyled" style="line-height: 2">
          <li><span class="fa fa-check text-success"></span> See all your orders</li>
          <li><span class="fa fa-check text-success"></span> Fast re-order</li>
          <li><span class="fa fa-check text-success"></span> Save your favorites</li>
          <li><span class="fa fa-check text-success"></span> Fast checkout</li>
          <li><span class="fa fa-check text-success"></span> Get a gift
            <small>(only new customers)</small>
          </li>
        </ul>
        <p>
          <%= link_to 'Yes please, register now!', new_registration_path(resource_name), :class => 'btn btn-info btn-block' %>
        </p>

      </div>
    </div>

<% end %>
