<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>
    <%= devise_error_messages! %>

    <div class="row">
      <div class="col-xs-offset-4 col-md-offset-4">
        <h4>Forgot your password?</h4>
      </div>
    </div>

    <div class="row">
      <div class="col-md-offset-3 col-md-5">
        <div class="well">
          <form id="loginForm" method="POST" action="/login/" novalidate="novalidate">
            <div class="form-group">
              <%= f.label :email, :class => 'control-label' %><br/>
              <%= f.email_field :email, {:autofocus => true, :class => 'form-control', :title => 'Please enter you username', :placeholder => 'example@gmail.com'} %>
              <span class="help-block"></span>
            </div>

            <%= f.submit 'Send me reset password instructions', :class => 'btn btn-success btn-block' %>
          </form>

          <br/>
          <%= render 'devise/shared/links' %>
        </div>
      </div>
    </div>
<% end %>